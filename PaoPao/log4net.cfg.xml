<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <!--观察日志-->
  <appender name="ObserverLog" type="log4net.Appender.RollingFileAppender,log4net" >
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <param name="File" value="logs\log_observerLog" />
    <param name="AppendToFile" value="true" />
    <param name="RollingStyle" value="Date" />
    <param name="DatePattern" value="/yyyy-MM-dd/&quot;ObserverLog@&quot;yyyyMMdd&quot;.txt&quot;" />
    <param name="StaticLogFileName" value="false" />
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d %r [%t] %-5p %c - %m%n%n"  />
      <param name="Header" value="&#13;&#10;" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="INFO" />
      <param name="LevelMax" value="INFO" />
    </filter>
  </appender>
  
  <appender name="RecordLog" type="log4net.Appender.RollingFileAppender,log4net" >
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <param name="File" value="logs\RecordLog" />
    <param name="AppendToFile" value="true" />
    <param name="RollingStyle" value="Date" />
    <param name="DatePattern" value="/yyyy-MM-dd/&quot;RecordLog@&quot;yyyyMMdd&quot;.txt&quot;" />
    <param name="StaticLogFileName" value="false" />
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d %r [%t] %-5p %c - %m%n%n"  />
      <param name="Header" value="&#13;&#10;" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="INFO" />
      <param name="LevelMax" value="INFO" />
    </filter>
  </appender>
  <logger name="ObserverLog">
    <level value="ALL" />
    <appender-ref ref="ObserverLog" />
  </logger>
  <logger name="RecordLog">
    <level value="ALL" />
    <appender-ref ref="RecordLog" />
  </logger>
  <!--信息日志-->
  <root>
    <!--如果只需要看看Sql设置INFO,WARN就够了，如果你要调试可以设置为DEBUG或ALL-->
    <priority value="WARN" />
    <appender-ref ref="rollingFile" />
  </root>
</log4net>
